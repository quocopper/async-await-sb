{
    // Use IntelliSense to learn about possible Node.js debug attributes.
    // Hover to view descriptions of existing attributes.
    // For more information, visit: https://go.microsoft.com/fwlink/?linkid=830387
    "version": "0.2.0",
    "configurations": [

        {
            "type": "node",
            "request": "attach",
            "name": "Attach to Process",
            "processId": "${command:PickProcess}",
            "port": 5858
        },
        {
            "type": "node",
            "request": "launch",
            "name": "Launch combined streams app",
            "program": "${workspaceRoot}/app/tutorials/archive.js",
            "cwd": "${workspaceRoot}",
            "protocol": "inspector",
            "args": [ "mypassword", "file2.txt" ]
        },
        {
            "type": "node",
            "request": "launch",
            "name": "Launch binary-test",
            "program": "${workspaceRoot}/app/binary-upload-test.js",
            "cwd": "${workspaceRoot}",
            "protocol": "inspector"
        },
        {
            "type": "node",
            "request": "launch",
            "name": "Launch Jasmine Tests",
            "program": "${workspaceRoot}/node_modules/cl-node-dev-tools/run-tests.js",
            "cwd": "${workspaceRoot}",
            "protocol": "inspector"
        },
        {
            "type": "node",
            "request": "launch",
            "name": "Attach to Port",
            "port": 5858,
            "cwd": "${workspaceRoot}"
        },
        {
            "name": "Attach-main",
            "type": "node",
            "request": "attach",
            "port": 5858,
            "address": "localhost",
            "restart": false,
            "sourceMaps": false,
            "outFiles": [],
            "localRoot": "${workspaceRoot}",
            "remoteRoot": "/home/copperleaf/app", 
            "protocol": "inspector"
        },
        {
            "name": "Attach-worker1",
            "type": "node",
            "request": "attach",
            "port": 5859,
            "address": "localhost",
            "restart": false,
            "sourceMaps": false,
            "outFiles": [],
            "localRoot": "${workspaceRoot}",
            "remoteRoot": "/home/copperleaf/app", 
            "protocol": "inspector"
        }


    ]
}